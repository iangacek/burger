<div class="container">
  <div class="jumbotron" id="mainJumbotron">
    <h1 class="display-4"><img src="/assets/img/burger.png" id="mainImg">Eat-Da-Burger!</h1>
  </div>

  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4">
      <h4>Burgers that have not been devoured:</h4>

      <ul>
        {{#each burgers}}
        {{#unless is_eaten}}
        {{> burgers/burger-block eat=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-4" id="burgerSubmission">
      <h4>Add a burger below!</h4>
      <form class="create-form">
        <div class="form-group">
          <label for="name">Burger Name:</label>
          <input type="text" id="name" name="name">
        </div>
        <div class="form-group">
          <label for="is_eaten">Do you want this burger?</label><br>
          <input type="radio" name="is_eaten" value="0" checked> I really want this burger!
        </div>

        <button type="submit" class="btn btn-secondary">Add-da-burger!</button>
      </form>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>